<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
  </head>
  <body>
    <div class="row d-flex justify-content-center">
      <div class="col-10 col-md-6 p-4 shadow-lg p-md-5 my-4 bg-white rounded">
        <form id="login-form">
          <div class="form-group">
            <label for="username-login">Email: </label>
            <input
              type="text"
              class="form-control"
              id="email-login"
              placeholder="Username"
              autocomplete="username"
            />
            <small id="username-help" class="form-text text-muted">We'll never
              share your information with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="user-password">Password: </label>
            <input
              type="password"
              class="form-control"
              id="password-login"
              placeholder="Password"
              autocomplete="current-password"
            />
          </div>
          <div
            id="login_error"
            class="alert alert-warning font-weight-bolder text-center invisible text-break"
            role="alert"
          >
          </div>
          <button
            type="submit"
            class="btn-block btn btn-primary font-weight-bold mt-3"
          > Log-in <i class="fas fa-sign-in-alt"> </i></button>
        </form>
        <br>
        No Account? <a href="/signup">Sign Up Here!</a>
      </div>
    </div>

  </body>
  <script src="/js/login.js"></script>
</html>