<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Product:</h3>

    <form class="form new-product-form">
      <div class="form-group">
        <label for="product-name">Product Name:</label>
        <input class="form-input" type="text" id="product-name" name="product-name" />
      </div>
      <div class="form-group">
        <label for="product-price">Price (£):</label>
        <input class="form-input" type="number" id="product-price" name="product-price" />
      </div>
      <div class="form-group">
        <label for="product-price">Installation Cost (£):</label>
        <input class="form-input" type="number" id="product-inst" name="product-inst" />
      </div>
      <div class="form-group">
        <label for="product-price">Payback Amount (£):</label>
        <input class="form-input" type="number" id="product-payback" name="product-payback" />
      </div>
      <div class="form-group">
        <label for="product-desc">Description:</label>
        <textarea class="form-input" id="product-desc" name="product-desc"></textarea>
      </div>
      <div class="form-group">
        <label for="product-desc">Category:</label>
        <textarea class="form-input" id="product-category" name="product-category"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if products.length}}
  <div class="col-md-6 product-list">
    <h3>Current products:</h3>

    {{#each products as |product|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/products/{{product.id}}">{{product.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{product.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
